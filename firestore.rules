rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Public read access for educational content
    match /public_subjects/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /public_lessons/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /public_quizzes/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /public_stories/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /public_flashcard_decks/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Seed status - allow authenticated users to write
    match /_seed_status/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /public_meta/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // User-specific data - allow any authenticated user to create their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;

      // Subcollections under users/{userId}
      match /quiz_attempts/{attemptId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /progress/{progressId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /achievements/{achievementId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /streak/{streakId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /activity_log/{logId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /user_progress/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /user_quiz_attempts/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /user_achievements/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /user_streak/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Materials collection (hierarchical structure for admin panel and learning content)
    match /materials/{gradeId}/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // For admin users
    }
  }
}
